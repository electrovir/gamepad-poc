{
    "name": "gamepad-poc",
    "version": "0.0.3",
    "private": true,
    "description": "Proof of concept for reading gamepad input in browsers",
    "homepage": "https://github.com/electrovir/gamepad-poc",
    "bugs": {
        "url": "https://github.com/electrovir/gamepad-poc/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/gamepad-poc"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "scripts": {
        "build:electron": "electron-snowpack build",
        "build:web": "snowpack build && ts-node src/build/post-build-scripts.ts dist/renderer",
        "deploy:dir": "npm run build:electron && electron-builder --dir -mwl",
        "deploy": "npm run build:electron && electron-builder -mwl",
        "format": "virmator format",
        "start:electron": "electron-snowpack dev",
        "start:web": "snowpack dev",
        "start": "npm run start:web"
    },
    "dependencies": {
        "bowser": "^2.11.0"
    },
    "devDependencies": {
        "electron": "^13.1.7",
        "electron-builder": "^22.11.7",
        "electron-snowpack": "^0.12.0",
        "snowpack": "^3.8.3",
        "ts-node": "^10.1.0",
        "virmator": "^0.0.7"
    },
    "build": {
        "appId": "com.github.electrovir.gamepad-poc",
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "linux": {
            "target": "deb"
        },
        "win": {
            "target": "portable"
        },
        "productName": "Gamepad POC",
        "copyright": "Copyright Â© 2021 electrovir",
        "extends": "electron-snowpack/config/electron-builder.js"
    }
}
